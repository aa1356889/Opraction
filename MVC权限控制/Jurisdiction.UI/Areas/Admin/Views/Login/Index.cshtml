@{
    ViewBag.Title = "登录页";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
	
	<!-- start: Meta -->
	<meta charset="utf-8">
	<title>请登陆</title>

	<!-- end: Meta -->
	
	<!-- start: Mobile Specific -->
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<!-- end: Mobile Specific -->
	<!-- start: CSS -->
	<link id="bootstrap-style" href="@BaseHelper.LoadResource("/bootstrap/css/bootstrap.min.css")" rel="stylesheet">
	<link href="@BaseHelper.LoadResource("/css/bootstrap-responsive.min.css")" rel="stylesheet">
	<link id="base-style" href="@BaseHelper.LoadResource("/css/style.css")" rel="stylesheet">
	<link id="base-style-responsive" href="@BaseHelper.LoadResource("/css/style-responsive.css")" rel="stylesheet">

    <script src="@BaseHelper.LoadResource("/js/jquery-1.9.1.min.js")"></script>

	<!-- The HTML5 shim, for IE6-8 support of HTML5 elements -->
	<!--[if lt IE 9]>
	  	<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
		<link id="ie-style" href="css/ie.css" rel="stylesheet">
	<![endif]-->
	
	<!--[if IE 9]>
		<link id="ie9style" href="css/ie9.css" rel="stylesheet">
	<![endif]-->
		
	<!-- start: Favicon -->
	<link rel="shortcut icon" href="img/favicon.ico">
	<!-- end: Favicon -->
	
			<style type="text/css">
			body { background: url(@BaseHelper.LoadResource("/img/bg-login.jpg")) !important; }
		</style>
		
		
		
</head>

<body>
		<div class="container-fluid-full">
		<div class="row-fluid">
					
			<div class="row-fluid">
				<div class="login-box">
					<div class="icons">
						@*<a href="index.html"><i class="halflings-icon home"></i></a>
						<a href="#"><i class="halflings-icon cog"></i></a>*@
					</div>
					<h2>登陆您的账户</h2>
					<form class="form-horizontal" id="formdata"  method="post">
							
							<div class="input-prepend" title="Username">
								<span class="add-on" style="height:30px"><i class="halflings-icon user"></i></span>
								<input class="input-large span10" name="loginName" id="loginName" type="text" placeholder="用户名"/>
							</div>
							<div class="clearfix"></div>

							<div class="input-prepend" title="Password">
								<span class="add-on" style="height:30px"><i class="halflings-icon lock"></i></span>
								<input class="input-large span10" name="passWord" id="passWord" type="password" placeholder="密码"/>
							</div>
							<div class="clearfix"></div>
							
							<label class="remember" for="isPersistence"><input type="checkbox" id="isPersistence" name="isPersistence" value="1" />记住我</label>

							<div class="button-login">	
								<a id="save" class="btn btn-primary">登陆</a>
							</div>
							<div class="clearfix"></div>
					</form>
					<hr>
					<h3>忘记了密码?</h3>
					<p>
						没有问题, <a href="#">点击这里</a>得到一个新密码
					</p>	
				</div><!--/span-->
			</div><!--/row-->
			

	</div>
	
		</div>
	

</body>
</html>
<script type="text/javascript">
    $("#save").click(function () {
        var data = $("#formdata").serialize();
        $.ajax({
            type: "POST",
            url: "@Url.Action("ProcessLogin")",
            data: data,
            success: function (jsonStr) {
                console.log(jsonStr);
                  var ajaxObj = JSON.parse(jsonStr);
                    if (ajaxObj.State == 0) {
                        alert("登陆成功")
                        window.location = ajaxObj.redirectUrl;
                    } else {  
                        alert(ajaxObj.Message);
                      
                    }
                }
            });
    })
</script>

